# boolean
developer = True
dev = input("i think you have question, will u  be developer?  \n" )
if dev == "yes":
    print("good job")
    print("You will  be python developer, just don't quit fast!")
elif dev == "no":
    print("you have no choice, it is do or die my friend!")
else:
    print("wrong choice")
# type casting
